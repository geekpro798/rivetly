{
  "name": "rivetly-context-server",
  "scripts": {
    "build:web": "cd rivetly-web && npm run build",
    "copy:dist": "rm -rf rivetly-extension/dist && cp -r rivetly-web/dist rivetly-extension/",
    "sync": "npm run build:web && npm run copy:dist",
    "deploy:bridge": "cd rivetly-web && npx wrangler deploy",
    "release": "npm run sync && npm run deploy:bridge"
  }
}
